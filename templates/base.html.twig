<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="{{asset('/css/bootstrap.min.css')}}">

         <!-- TITRE -->
        <title>{% block title %}ProStages{% endblock %}</title>
        {% block stylesheets %}{% endblock %}

    </head>
    <body>
        <div class="fluid-container" style="padding:30px">

            <!-- BLOCK HEADER -->
            {% block header %}
            <div class="row my-5" >
                <div class="col-md-12">
                    <h1 align=center>
                        ProStages
                    </h1>
                 </div>
            </div>
            {% endblock %}

            <!-- MENU NAVBAR -->
            
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                    
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ path('prostages_accueil') }}">Accueil<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('prostages_filtrer') }}">Filtrer</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('prostages_ajouterEntreprise')}}">Ajouter une entreprise</a>
                            </li>
                            
                        </ul>
                    </div>
                </nav>   

            

             <!-- BLOCK CONTENU -->
            {% block contenu %}
            <div class="row my-5">
                <div class="col-md-12">

                    <!-- BLOCK TITRE PAGE -->
                    <h2 style="margin-bottom:2rem">
                    {% block titrePage %} {% endblock %}
                    </h2>
                    <!-- BLOCK CONTENU DE LA PAGE -->
                    {% block contenuPage %} {% endblock %}

                </div>
            </div>

            {% endblock %}

             <!-- BLOCK JAVASCRIPT -->
            {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
            <script src="{{asset('/js/bootstrap.min.js')}}" ></script>
            {% endblock %}
        </div>
    </body>
</html>

{% extends 'base.html.twig' %}

{% block titrePage %}Formations <a href="{{ path('formation_new') }}" class="btn btn-info" style="float:right"><i class="far fa-plus-square"></i> Ajouter</a>{% endblock %}

{% block contenuPage %}

    <table class="table">
        <thead>
            <tr>
                <th>Formation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.Formation }}</td>
                <td>
                    <a href="{{ path('formation_show', {'id': formation.id}) }}"><i class="fas fa-eye"></i></a> &nbsp;  
                    <a href="{{ path('formation_edit', {'id': formation.id}) }}"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de formations créées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
